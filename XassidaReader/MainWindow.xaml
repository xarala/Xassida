<Window x:Class="XassidaReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:Xarala.Xassida;assembly=SnXassidaApi"
        Title="MainWindow" Height="650" Width="525" Loaded="Window_Loaded">
    
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type a:Beyit}">
            <TextBlock Text="{Binding Titre}" />
        </DataTemplate>
    </Window.Resources>
    
    <FlowDocument>   
        
        <Section x:Name="Description">
            <Paragraph>
                <TextBlock x:Name="Titre" Text="{Binding Titre}" FontSize="30" />
                <TextBlock x:Name="Tardioumane" Text="{Binding Tardioumane}"></TextBlock>
            </Paragraph>
        </Section>
        
        <Section x:Name="Beyits">
        </Section>
        
    </FlowDocument>
    
</Window>
