<Window x:Class="XassidaReader.XassidaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:Xarala.Xassida;assembly=SnXassidaApi"
        Title="Xassida" Height="650" Width="825" Loaded="Window_Loaded">


    <FlowDocument x:Name="XFlowDocument" FlowDirection="RightToLeft" 
                  FontFamily="Arabic Typesetting" FontSize="25" FontStretch="Expanded" 
                  IsColumnWidthFlexible="false" IsOptimalParagraphEnabled="True"
                  Style="10, 10, 10, 10">   
        
        <Section x:Name="Description">
            <Paragraph>
                <TextBlock x:Name="Titre" Text="{Binding Titre}" FontSize="30" TextAlignment="Justify" FlowDirection="LeftToRight" />
                <TextBlock x:Name="Tardioumane" Text="{Binding Tardioumane}"></TextBlock>
            </Paragraph>
        </Section>
        
    </FlowDocument>
    
</Window>
