<Window x:Class="XassidaReader.XassidaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:Xarala.Xassida;assembly=SnXassidaApi"
        Title="Xassida" Height="650" Width="720" Loaded="Window_Loaded"  Icon="Assets/XassidaReader.ico">
        

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="240" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel FlowDirection="RightToLeft" Grid.Column="0" Grid.Row="0">

            <TextBlock x:Name="Titre" Text="{Binding Titre}" FontSize="30" TextAlignment="Center"  />
            
            <TextBlock x:Name="Tardioumane" Text="{Binding Tardioumane}" />

        </StackPanel>
        
        <ListBox ItemsSource="{Binding Beyits}" Grid.Column="0" Grid.Row="1">
            
        </ListBox>

        
    </Grid>
    
    

</Window>
